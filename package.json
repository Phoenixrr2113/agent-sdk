{
  "name": "agent-sdk-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Agent SDK - AI agent tools and server for the AI SDK",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test -- --coverage",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf .turbo",
    "inspect": "npx workflow inspect runs --web",
"test:integration": "pnpm --filter integration-tests run test",
    "docs:dev": "pnpm --filter docs run dev",
    "docs:build": "pnpm --filter docs run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "size": "size-limit"
  },
  "devDependencies": {
    "@agent/config-eslint": "workspace:*",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^3.2.0",
    "eslint": "^9.0.0",
    "size-limit": "^12.0.0",
    "turbo": "^2.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "sdk",
    "llm",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "yaml": "^2.8.2"
  }
}
