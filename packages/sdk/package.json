{
  "name": "@agntk/core",
  "version": "0.1.0",
  "type": "module",
  "description": "Opinionated agent SDK extending AI SDK's ToolLoopAgent",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./workflow": {
      "types": "./dist/workflow/index.d.ts",
      "import": "./dist/workflow/index.js",
      "default": "./dist/workflow/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "default": "./dist/tools/index.js"
    },
    "./evals": {
      "types": "./dist/evals/index.d.ts",
      "import": "./dist/evals/index.js",
      "default": "./dist/evals/index.js"
    },
    "./advanced": {
      "types": "./dist/advanced/index.d.ts",
      "import": "./dist/advanced/index.js",
      "default": "./dist/advanced/index.js"
    }
  },
  "scripts": {
    "build": "tsc && node ../../scripts/fix-esm-imports.mjs ./dist",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agntk/logger": "workspace:*",
    "@ai-sdk/openai-compatible": "^2.0.28",
    "ai": "6.0.77",
    "vectra": "^0.9.0",
    "xstate": "^5.26.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@agntk/config-typescript": "workspace:*",
    "@types/node": "^20.17.19",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "@vercel/otel": "*",
    "agent-browser": "*",
    "langfuse-vercel": "*",
    "workflow": "*"
  },
  "peerDependenciesMeta": {
    "workflow": {
      "optional": true
    },
    "langfuse-vercel": {
      "optional": true
    },
    "@vercel/otel": {
      "optional": true
    },
    "agent-browser": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agntk/agntk.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/agntk/agntk#readme",
  "bugs": {
    "url": "https://github.com/agntk/agntk/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "ai-sdk",
    "tools",
    "workflow",
    "durable"
  ],
  "license": "MIT"
}
