{
  "name": "@agent/sdk",
  "version": "0.1.0",
  "type": "module",
  "description": "Opinionated agent SDK extending AI SDK's ToolLoopAgent",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./workflow": {
      "types": "./dist/workflow/index.d.ts",
      "import": "./dist/workflow/index.js",
      "default": "./dist/workflow/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agent/logger": "workspace:*",
    "ai": "6.0.77",
    "zod": "^3.25.76",
    "vectra": "^0.9.0",
    "@openrouter/ai-sdk-provider": "^1.5.4",
    "ollama-ai-provider-v2": "^2.0.0",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/anthropic": "^1.2.12"
  },
  "devDependencies": {
    "@agent/config-typescript": "workspace:*",
    "typescript": "^5.7.3",
    "vitest": "^1.6.1",
    "@types/node": "^20.17.19"
  },
  "peerDependencies": {
    "workflow": "*",
    "langfuse-vercel": "*",
    "@vercel/otel": "*",
    "agent-browser": "*"
  },
  "peerDependenciesMeta": {
    "workflow": {
      "optional": true
    },
    "langfuse-vercel": {
      "optional": true
    },
    "@vercel/otel": {
      "optional": true
    },
    "agent-browser": {
      "optional": true
    }
  },
  "keywords": ["ai", "agent", "llm", "ai-sdk", "tools"],
  "license": "MIT"
}
