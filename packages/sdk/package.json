{
  "name": "@agent/sdk",
  "version": "0.1.0",
  "type": "module",
  "description": "Opinionated agent SDK extending AI SDK's ToolLoopAgent",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./workflow": {
      "types": "./dist/workflow/index.d.ts",
      "import": "./dist/workflow/index.js",
      "default": "./dist/workflow/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "import": "./dist/tools/index.js",
      "default": "./dist/tools/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agent/logger": "workspace:*",
    "@ai-sdk/openai-compatible": "^2.0.28",
    "ai": "6.0.77",
    "vectra": "^0.9.0",
    "xstate": "^5.26.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@agent/config-typescript": "workspace:*",
    "@types/node": "^20.17.19",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "@vercel/otel": "*",
    "agent-browser": "*",
    "langfuse-vercel": "*",
    "workflow": "*"
  },
  "peerDependenciesMeta": {
    "workflow": {
      "optional": true
    },
    "langfuse-vercel": {
      "optional": true
    },
    "@vercel/otel": {
      "optional": true
    },
    "agent-browser": {
      "optional": true
    }
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "ai-sdk",
    "tools"
  ],
  "license": "MIT"
}
