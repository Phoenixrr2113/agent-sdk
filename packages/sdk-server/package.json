{
  "name": "@agntk/server",
  "version": "0.2.0",
  "type": "module",
  "description": "HTTP/WebSocket server for @agntk/core",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && node ../../scripts/fix-esm-imports.mjs ./dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agntk/logger": "workspace:*",
    "@agntk/core": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.3.0",
    "hono": "^4.11.7"
  },
  "devDependencies": {
    "@agntk/config-typescript": "workspace:*",
    "@types/node": "^20.17.19",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agntk/agntk.git",
    "directory": "packages/sdk-server"
  },
  "homepage": "https://github.com/agntk/agntk#readme",
  "bugs": {
    "url": "https://github.com/agntk/agntk/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "server",
    "hono",
    "sse",
    "websocket"
  ],
  "license": "MIT"
}
