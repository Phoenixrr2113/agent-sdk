{
  "name": "@agent/sdk-server",
  "version": "0.1.0",
  "type": "module",
  "description": "HTTP/WebSocket server for @agent/sdk",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agent/logger": "workspace:*",
    "@agent/sdk": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.3.0",
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@agent/config-typescript": "workspace:*",
    "@types/node": "^20.17.19",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  },
  "keywords": [
    "ai",
    "agent",
    "server",
    "hono"
  ],
  "license": "MIT"
}
