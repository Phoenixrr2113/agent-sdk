{
  "name": "@agent/logger",
  "version": "0.1.0",
  "type": "module",
  "description": "Zero-dependency debug logging with namespace filtering, file output, and SSE support",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./transports": {
      "types": "./dist/transports/index.d.ts",
      "import": "./dist/transports/index.js",
      "default": "./dist/transports/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@agent/config-typescript": "workspace:*",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3",
    "@types/node": "^20.17.19"
  },
  "keywords": ["logging", "debug", "sse", "ai-agent"],
  "license": "MIT"
}
